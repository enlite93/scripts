#!/bin/bash

CLOUD=/home/$USER/android/updates
BUILD_DIR=/home/$USER/android/builds/aokp
OUT=out/target/product/tf101
CCACHE=$BUILD_DIR/prebuilt/linux-x86/ccache
Option1="Repo Sync"
Option2="Build for TF101"
Option3="Clean Build"

export USE_CCACHE=1
export CCACHE_DIR=/home/$USER/android/.ccache

function sync {
    cd $BUILD_DIR
    repo sync -j16
}

function tf101 {
    cd $CCACHE
    ./ccache -M 40G
    sync
    . build/envsetup.sh
    brunch tf101
    ssh storage -t cp /home/downloads/android/builds/aokp/out/target/product/tf101/aokp_tf101_milestone-4.zip /home/will/Dropbox/Public/android/updates/tf101-aokp.zip
}

function clean {
    cd $BUILD_DIR
    . build/envsetup.sh
    lunch aokp_tf101-userdebug
    make clean -j16
}

PS3='Please enter your choice: '
options=("$Option1" "$Option2" "$Option3" "Quit")
select opt in "${options[@]}"
do
    case $opt in
        "$Option1")
            sync
            break
            ;;
        "$Option2")
            tf101
            break
            ;;
        "$Option3")
            clean
            break
            ;;
        "Quit")
            break
            ;;
        *) echo invalid option;;
    esac
done
