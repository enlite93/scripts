#!/bin/bash
BUILD_DIR=$(pwd)
VENDOR=${BUILD_DIR}/vendor/aokp
MANIFEST=${BUILD_DIR}/.repo/manifest.xml

for i in $@; do :; done
DEVICE=$i
APK="${@:(-2):1}"

apk() {
    lunch aokp_${DEVICE}-userdebug
    mmm $APK
}

build() {
    while [ -n "${1}" ]; do
        remove
        time brunch $1
        if [ ! -d "../files/$1" ]; then
            mkdir -p ../files/$1
        fi
        find . -name aokp_${1}_\*.zip -exec cp {} ../files/$1/ \; -exec echo "Successfully copied to Androtransfer..." \;
        shift 1
    done
}

build-all() {
    cat $VENDOR/vendorsetup.sh | cut -f2 -d ' ' > .build_list
    while read line ;do
        DEVNAME=$(echo $line | cut -f2 -d ' ' | cut -f2 -d '_' | cut -f1 -d '-')
        brunch $DEVNAME
        find . -name aokp_${DEVNAME}_\*.zip -exec cp {} ../files/$DEVNAME/ \; -exec echo "Successfully copied to Androtransfer..." \;
    done < .build_list
    rm .build_list
}

check() {
    BRANCH=$(grep "platform_manifest" ${MANIFEST} | awk -F'"' '{print $8}')
    OUR_HEAD=$(git rev-parse HEAD)
    THEIR_HEAD=$(git rev-parse aokp/${BRANCH})
    GIT_STATUS=$(git status | grep nothing)

    if [ "${OUR_HEAD}" == "${THEIR_HEAD}" ]; then
        echo "Cherry-pick was not cleanly merged, please addres..."
        echo "Failed to pick clean in $pwd"
        die
    elif [ -z "${GIT_STATUS}" ]; then
        git commit -a
    fi
}

clobber() {
    make clobber -j16
}

die() {
    exit 0
}

help() {
    echo -e "usage: $0 [OPTIONS] APK DEVICE \n"

    echo "Options:
  -h, --help      Show this help message and exit
  -l, --clean     Runs make clean based on the device
  -c, --clobber   Performs a make clobber on the source
  -s, --sync      Runs a repo sync -j32
  -b, --build     Builds the current source. Requires DEVICE be provided
  -a, --all       Builds all devices listed in $VENDOR/vendorsetup.sh
  -m, --mmm       Compiles the specified apk individually. Requires APK be provided
  -p, --pick      Cherry-pick the specific changes"
}

pick() {
    cd frameworks/base
    cd -; cd packages/apps/ROMControl
    cd -; cd packages/apps/Settings
    cd -
}

remove() {
    find . -name aokp_\*.zip -exec rm -rf {} \; -exec echo "Removing previous builds" \;
}

sync() {
    repo sync -j8
}

if [ "$1" == "" ]
then
    help
    exit
else
    cd $BUILD_DIR
    . build/envsetup.sh
fi

for arg
do
    delim=""
    case "$arg" in
        --all) args="${args} -a ";;
        --build) args="${args} -b ";;
        --clobber) args="${args} -c ";;
        --help) args="${args} -h ";;
        --mmm) args="${args} -m ";;
        --pick) args="${args} -p ";;
        --sync) args="${args} -s ";;
        *) [[ "${arg:0:1}" == "-" ]] || delim="\""
        args="${args}${delim}${arg}${delim} ";;
    esac
done

eval set -- $args
    while getopts ":hspcam:b:?" option 2>/dev/null
    do
        case $option in
            a) time build-all
                ;;
            b) build "${@:2}"
                ;;
            c) clobber
                ;;
            h) help
                exit
                ;;
            m) apk
                ;;
            p) pick
                ;;
            s) sync
                ;;
            :) echo "Option -$OPTARG requires an argument."
                help
                exit
                ;;
            *) echo $OPTARG is an unrecognized option;
                help
                exit
                ;;
        esac
    done
