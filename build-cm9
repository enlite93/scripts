#!/bin/bash

CLOUD=/home/konrad/android/updates
BUILD_DIR=/home/konrad/android/builds/cm9
OUT=out/target/product/toro
CCACHE=$BUILD_DIR/prebuilt/linux-x86/ccache
Option1="Repo Sync"
Option2="Full Build"
Option3="Clean Build"

export USE_CCACHE=1
export CCACHE_DIR=/home/konrad/android/.ccache

function sync {
    cd $BUILD_DIR
    repo sync -j16
}

function full {
    cd $CCACHE
    ./ccache -M 40G
    cd $BUILD_DIR
    repo sync -j16
    . build/envsetup.sh
    lunch cm_toro-userdebug
    ./vendor/cm/get-prebuilts
    make -j6 otapackage
    mv $OUT/cm_toro*.zip $CLOUD/toro-cm9.zip
}

function clean {
    cd $BUILD_DIR
    make clean -j16
}

PS3='Please enter your choice: '
options=("$Option1" "$Option2" "$Option3" "Quit")
select opt in "${options[@]}"
do
    case $opt in
        "$Option1")
            sync
            break
            ;;
        "$Option2")
            full
            break
            ;;
        "$Option3")
            clean
            break
            ;;
        "Quit")
            break
            ;;
        *) echo invalid option;;
    esac
done
